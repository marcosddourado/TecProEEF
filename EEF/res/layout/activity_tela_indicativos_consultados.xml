<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewConsulta"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radioButtonMarcar"
                style="@style/subTituloSobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonMarcarTodosClicked"
                android:text="@string/title_radio_button_marcar_todas" />

            <RadioButton
                android:id="@+id/radioButtonDesmarcar"
                style="@style/subTituloSobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonDesmarcarTodosClicked"
                android:text="@string/title_radio_button_desmarcar_todas" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBox_ideb"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/ideb_participation" />

        <CheckBox
            android:id="@+id/checkBox_primeiros_projeto"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_program_projects" />

        <CheckBox
            android:id="@+id/checkBox_projetos_cnpq"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cnpq_search_projects" />

        <CheckBox
            android:id="@+id/checkBox_projetos_jovens"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teen_searchers" />

        <CheckBox
            android:id="@+id/checkBox_projetos_iniciacao"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initiation_projects" />

        <CheckBox
            android:id="@+id/checkBox_projetos_difusao"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_numbers" />

        <CheckBox
            android:id="@+id/checkBox_population"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/population" />

        <CheckBox
            android:id="@+id/checkBox_pib_participation"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/participacao_percentual_PIB" />

        <CheckBox
            android:id="@+id/checkBox_census"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/census" />

        <CheckBox
            android:id="@+id/checkBox_horas_aula"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_class_hours_average" />

        <CheckBox
            android:id="@+id/checkBox_quantidade_aluno"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/students_average_per_class" />

        <CheckBox
            android:id="@+id/checkBox_distortion_rate"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distortion_rate" />

        <CheckBox
            android:id="@+id/checkBox_dropout_rate"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dropout_rate" />

        <CheckBox
            android:id="@+id/checkBox_utilization_rate"
            style="@style/subTituloSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/utilization_rate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <Button
                android:id="@+id/buttonAvancar"
                style="@style/botaoMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/avancar"
                android:onClick="allIndicativesButtonTouch" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>